<?xml version="1.0" encoding="utf-8"?>
<!--
android:onclick attritbute calls a function defined in the corresponding Class file
-Dunlaps is the name of the function defined in Mainactivity.java
-Dunlaps instantiates an Intent before calling startActivity() and passing the Intent object as an argument
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andyscreens.SecondActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="This is my first app!"
        android:id="@+id/text"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Second Activity"
        android:onClick="Dunlaps"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="168dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:onClick="Dunlaps"
        android:text="Third Activity"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="168dp"
        android:layout_marginBottom="196dp" />
</LinearLayout>